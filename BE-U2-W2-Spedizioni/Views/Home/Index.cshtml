@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Arial', sans-serif;
        }

        section {
            padding: 80px 0;
            text-align: center;
        }

        .section-bg {
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            opacity: 0.8;
        }

        .section-title {
            color: #fff;
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 30px;
        }

        .section-subtitle {
            color: #fff;
            font-size: 18px;
            font-weight: 400;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="container-fluid">

        <!-- Sezione Hero -->
        <section id="hero-section" class="hero-section section-bg" style="background-image: url('https://source.unsplash.com/1920x1080/?shipping');">
            <div class="container text-white">
                <h1 class="hero-title">Benvenuto nell'Agenzia di Spedizioni</h1>
                <p class="hero-subtitle">Offriamo soluzioni di spedizione rapide ed efficienti</p>
                <a href="/Home/About" class="btn btn-primary btn-lg">Scopri di più</a>
            </div>
        </section>

        <!-- Sezione Chi Siamo -->
        <section id="about-section" class="about-section section-bg" style="background-image: url('https://source.unsplash.com/1920x1080/?logistics');">
            <div class="container">
                <h2 class="section-title">Chi Siamo</h2>
                <p class="section-subtitle">Scopri di più sulla nostra azienda e la nostra missione</p>
                <!-- Inserisci il tuo contenuto o collegamenti aggiuntivi -->
            </div>
        </section>

        <!-- Sezione Anagrafica Clienti -->
        <section id="customer-section" class="customer-section section-bg" style="background-image: url('https://source.unsplash.com/1920x1080/?customer');">
            <div class="container">
                <h2 class="section-title">Anagrafica Clienti</h2>
                <p class="section-subtitle">Registra nuovi clienti e gestisci i dettagli delle spedizioni</p>
                <!-- Aggiungi link o pulsanti per gestire l'anagrafica dei clienti -->
            </div>
        </section>

        <!-- Sezione Aggiornamento Stato Spedizione -->
        <section id="update-section" class="update-section section-bg" style="background-image: url('https://source.unsplash.com/1920x1080/?update');">
            <div class="container">
                <h2 class="section-title">Aggiornamento Stato Spedizione</h2>
                <p class="section-subtitle">Registra gli aggiornamenti dello stato delle spedizioni</p>
                <!-- Aggiungi form o link per l'aggiornamento dello stato delle spedizioni -->
            </div>
        </section>

        <!-- Sezione Controllo Stato Spedizione -->
        <section id="check-status-section" class="check-status-section section-bg" style="background-image: url('https://source.unsplash.com/1920x1080/?check-status');">
            <div class="container">
                <h2 class="section-title">Controllo Stato Spedizione</h2>
                <p class="section-subtitle">Permetti ai clienti di verificare lo stato delle proprie spedizioni</p>
                <!-- Aggiungi form o link per il controllo dello stato delle spedizioni -->
            </div>
        </section>

        <!-- Sezione Statistiche e Report -->
        <section id="stats-section" class="stats-section section-bg" style="background-image: url('https://source.unsplash.com/1920x1080/?statistics');">
            <div class="container">
                <h2 class="section-title">Statistiche e Report</h2>
                <p class="section-subtitle">Visualizza statistiche e report sulle spedizioni</p>
                <!-- Aggiungi grafici o link per visualizzare statistiche -->
            </div>
        </section>

    </div>
</body>
</html>


