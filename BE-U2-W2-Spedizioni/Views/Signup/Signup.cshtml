@model BE_U2_W2_Spedizioni.Models.Utente

@{
    ViewBag.Title = "Signup";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Registrati</h2>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", id = "username", placeholder = "" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", id = "password", placeholder = "", type = "password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Crea l'account</button>
                        </div>
                    }
                </div>
            </div>
            <div class="text-center mt-3">
                @Html.ActionLink("Possiedi gia un account? Fai il login da qui.", "Login", new { @class = "btn btn-link" })
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
